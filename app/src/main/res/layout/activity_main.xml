<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pureWhite"
        tools:context=".MainActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="20dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:weightSum="2">
                    <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/royalBlue"
                            android:orientation="vertical">
                        <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="102dp"
                                android:src="@drawable/fire_icon"/>
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/fire_icon"
                                android:textSize="22sp"
                                android:textAlignment="center"
                                android:layout_marginTop="10dp"
                                android:textColor="@color/pureWhite"/>

                    </LinearLayout>

                    <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:layout_marginLeft="10dp"
                            android:background="@color/royalBlue"
                            android:orientation="vertical">
                        <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="102dp"
                                android:src="@drawable/firefighter_icon"/>
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/firefighter_icon"
                                android:textSize="22sp"
                                android:textAlignment="center"
                                android:textColor="@color/pureWhite"/>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="20dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:weightSum="2">
                        <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="160dp"
                                android:layout_marginRight="10dp"
                                android:background="@color/royalBlue"
                                android:orientation="vertical">
                            <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="102dp"
                                    android:src="@drawable/fireextinct_icon"/>
                            <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="@string/fireextinct_icon"
                                    android:textSize="22sp"
                                    android:textAlignment="center"
                                    android:textColor="@color/pureWhite"/>

                        </LinearLayout>

                        <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="160dp"
                                android:layout_marginLeft="10dp"
                                android:background="@color/royalBlue"
                                android:orientation="vertical">
                            <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="102dp"
                                    android:src="@drawable/firealarm_icon"/>
                            <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="@string/firealarm_icon"
                                    android:textSize="22sp"
                                    android:textAlignment="center"
                                    android:layout_marginTop="10dp"
                                    android:textColor="@color/pureWhite"/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>