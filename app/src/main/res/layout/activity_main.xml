                                android:layout_height="wrap_content"
                                android:text="@string/title_activity_first_aid"
                                android:textSize="@dimen/fontsize_lesson_title"
                                android:textStyle="bold"
                                android:textColor="@color/primaryTextColor"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                    <LinearLayout
                            android:id="@+id/check_temp_btn"
