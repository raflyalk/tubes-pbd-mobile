        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/lesson_main_margin_vertical"
                    android:layout_marginBottom="@dimen/lesson_main_margin_vertical"
                    android:layout_marginStart="@dimen/home_main_margin_horizontal"
                    android:layout_marginEnd="@dimen/home_main_margin_horizontal"
                    android:paddingBottom="@dimen/lesson_main_margin_vertical"
                    android:orientation="vertical">

                <LinearLayout
                        android:id="@+id/report_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/patchimage"
                        android:orientation="vertical"
                        android:padding="@dimen/lesson_object_padding"
                        android:layout_marginTop="@dimen/lesson_object_margin_vertical"
                        android:layout_marginBottom="@dimen/lesson_object_margin_vertical">

                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/home_object_image_height"
                            android:scaleType="centerInside"
                            android:src="@mipmap/fire" />

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/title_activity_report"
                            android:textSize="@dimen/fontsize_lesson_title"
                            android:textStyle="bold"
                            android:textColor="@color/primaryTextColor"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/caption_activity_report"
                            android:textSize="@dimen/fontsize_lesson_body"
                            android:textColor="@color/secondaryTextColor"/>

                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                    <LinearLayout
                            android:id="@+id/latest_fire_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/patchimage"
                            android:orientation="vertical"
                            android:padding="@dimen/lesson_object_padding"
                            android:layout_marginTop="@dimen/lesson_object_margin_vertical"
                            android:layout_marginBottom="@dimen/lesson_object_margin_vertical"
                            android:layout_marginRight="@dimen/lesson_object_margin_horizontal">

                        <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/home_object_image_height"
                                android:scaleType="centerInside"
                                android:src="@mipmap/time" />

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/title_activity_latest_fire"
                                android:textSize="@dimen/fontsize_lesson_title"
                                android:textStyle="bold"
                                android:textColor="@color/primaryTextColor"/>

                    </LinearLayout>

                    <LinearLayout
                            android:id="@+id/first_aid_btn"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:background="@drawable/patchimage"
                            android:orientation="vertical"
                            android:padding="@dimen/lesson_object_padding"
