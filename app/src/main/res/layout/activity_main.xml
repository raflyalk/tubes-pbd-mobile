                                android:layout_height="wrap_content"
                                android:text="@string/title_activity_settings"
                                android:textSize="@dimen/fontsize_lesson_title"
                                android:textStyle="bold"
                                android:textColor="@color/primaryTextColor"/>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
